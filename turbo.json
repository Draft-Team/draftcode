{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["public/**", "dist/**", ".dist/**"]
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"ui-add": {
			"cache": false,
			"interactive": true
		},
		"db:push": {
			"cache": false,
			"interactive": true
		},
		"db:reset": {
			"cache": false,
			"interactive": true
		},
		"db:studio": {
			"cache": false,
			"interactive": true
		},
		"db:generate": {
			"cache": false,
			"interactive": true
		}
	},
	"globalEnv": [
		"PORT",
		"DATABASE_URL",
		"DATABASE_AUTH_TOKEN",
		"FRONTEND_URL",
		"CLOUDINARY_CLOUD_NAME",
		"CLOUDINARY_API_KEY",
		"CLOUDINARY_API_SECRET",
		"GITHUB_CLIENT_ID",
		"GITHUB_CLIENT_SECRET",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"VITE_BACKEND_URL"
	]
}
